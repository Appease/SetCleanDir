<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<id>SetCleanDir</id>
		<version>$version$</version>
		<authors>Chris Dostert</authors>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>
			A PoshCI step that sets one or more clean directories by either creating them or deleting any existing content
		</description>
		<tags>Powershell PoshCI Clean</tags>
		<projectUrl>https://github.com/PoshCI/SetCleanDir</projectUrl>
	</metadata>	
	<files>
		<file src="**" target="tools\SetCleanDir" exclude="**\.nuspec"/>
	</files>
</package>
